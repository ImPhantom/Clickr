{
  "name": "clickr",
  "version": "0.1.6",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ImPhantom/Clickr.git"
  },
  "author": {
    "name": "ImPhantom",
    "email": "phantom@xeno.team",
    "url": "https://xeno.gg/"
  },
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "rebuild": "electron-rebuild",
    "dist": "yarn compile && yarn rebuild && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null"
  },
  "dependencies": {
    "datauri": "^2.0.0",
    "electron-store": "^5.1.1",
    "jquery": "^3.5.0",
    "robotjs": "^0.6.0",
    "selectize": "^0.12.6",
    "semver": "^7.2.2",
    "source-map-support": "^0.5.16",
    "weatherstar-switch": "^1.0.7"
  },
  "devDependencies": {
    "electron": "8.5.2",
    "electron-builder": "^22.4.1",
    "electron-rebuild": "^1.10.1",
    "electron-webpack": "^2.8.2",
    "webpack": "~4.42.1"
  },
  "electronWebpack": {
    "commonSourceDirectory": "src/common",
    "staticSourceDirectory": "src/static",
    "title": true,
    "main": {
      "sourceDirectory": "src/main"
    },
    "renderer": {
      "sourceDirectory": "src/renderer",
      "template": "src/renderer/index.html"
    }
  },
  "build": {
    "appId": "gg.xeno.clickr",
    "files": [
      "build/*"
    ],
    "nsis": {
      "artifactName": "${productName}_${version}_installer.${ext}"
    },
    "win": {
      "target": "NSIS"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
