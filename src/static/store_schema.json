{
    "triggerType": {
        "type": "string",
        "enum": ["toggle", "hold"]
    },
    "clickingMouseButton": {
        "type": "string",
        "enum": ["left", "middle", "right"]
    },
    "clickSpeed": {
        "type": "object",
        "properties": {
            "times": { "type": "string" },
            "unit": { "type": "string" }
        }
    },
    "stopAfter": {
        "type": "object",
        "properties": {
            "enabled": { "type": "boolean" },
            "afterClicks": { "type": "string" }
        }
    },
    "toggleTrigger": {
        "type": "object",
        "properties": {
            "singleHotkeyToggle": {
                "type": "boolean"
            },
            "startHotkey": {
                "type": "array",
                "items": { "type": "string" }
            },
            "startShortcut": {
                "type": "string"
            },
            "stopHotkey": {
                "type": "array",
                "items": { "type": "string" }
            },
            "stopShortcut": {
                "type": "string"
